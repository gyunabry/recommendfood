<resources>
    <!-- Base application theme. -->
    <style name="AppNoTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:visibility">visible</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.DayNight">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:visibility">visible</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <style name="SimpleRouteLineStyle" parent="RouteLineStyle">
        <item name="mapLineWidth">18.0</item>
        <item name="mapLineColor">#624cab</item>
        <item name="mapStrokeWidth">3</item>
        <item name="mapStrokeColor">#ffffff</item>
    </style>

    <style name="BlueRouteLineStyle" parent="RouteLineStyle">
        <item name="mapLineWidth">26.0</item>
        <item name="mapLineColor">#0597F2</item>
        <item name="mapStrokeWidth">3</item>
        <item name="mapStrokeColor">#ffffff</item>
    </style>

    <style name="RedRouteLineStyle" parent="RouteLineStyle">
        <item name="mapLineWidth">26.0</item>
        <item name="mapLineColor">#F24607</item>
        <item name="mapStrokeWidth">3</item>
        <item name="mapStrokeColor">#ffffff</item>
    </style>

    <style name="YellowRouteLineStyle" parent="RouteLineStyle">
        <item name="mapLineWidth">26.0</item>
        <item name="mapLineColor">#EAF205</item>
        <item name="mapStrokeWidth">3</item>
        <item name="mapStrokeColor">#ffffff</item>
    </style>

    <style name="GreenRouteLineStyle" parent="RouteLineStyle">
        <item name="mapLineWidth">26.0</item>
        <item name="mapLineColor">#49D907</item>
        <item name="mapStrokeWidth">3</item>
        <item name="mapStrokeColor">#ffffff</item>
    </style>


    <style name="labelTextStyle_1" parent="LabelTextStyle">
        <item name="mapTextSize">32</item>
        <item name="mapTextColor">#DB5461</item>
        <item name="mapTextStrokeWidth">1</item>
        <item name="mapTextStrokeColor">#DB5461</item>
    </style>

    <style name="labelTextStyle_2" parent="LabelTextStyle">
        <item name="mapTextSize">30</item>
        <item name="mapTextColor">#624CAB</item>
        <item name="mapTextStrokeWidth">1</item>
        <item name="mapTextStrokeColor">@android:color/darker_gray</item>
    </style>

    <style name="cubic_in_out_animation">
        <item name="repeatCount">10</item>
        <item name="duration">3000</item>
        <item name="interpolation">CubicInOut</item>
        <item name="startAlpha">0.7</item>
        <item name="endAlpha">0.3</item>
        <item name="startRadius">0.0</item>
        <item name="endRadius">100.0</item>
    </style>

    <style name="cubic_in_animation">
        <item name="repeatCount">10</item>
        <item name="duration">3000</item>
        <item name="interpolation">CubicIn</item>
        <item name="startAlpha">0.7</item>
        <item name="endAlpha">0.0</item>
        <item name="startRadius">0.0</item>
        <item name="endRadius">100.0</item>
    </style>

    <style name="linear_animation">
        <item name="repeatCount">10</item>
        <item name="duration">3000</item>
        <item name="interpolation">Linear</item>
        <item name="startAlpha">0.0</item>
        <item name="endAlpha">1.0</item>
        <item name="startRadius">0.0</item>
        <item name="endRadius">100.0</item>
    </style>

    <style name="cubic_out_animation">
        <item name="repeatCount">10</item>
        <item name="duration">3000</item>
        <item name="interpolation">CubicOut</item>
        <item name="startAlpha">0.0</item>
        <item name="endAlpha">1.0</item>
        <item name="startRadius">0.0</item>
        <item name="endRadius">100.0</item>
    </style>
</resources>