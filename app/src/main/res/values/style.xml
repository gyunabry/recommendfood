<resources>
    <!-- Base application theme. -->
    <style name="AppNoTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:visibility">visible</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.DayNight">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:visibility">visible</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <style name="labelTextStyle_1" parent="LabelTextStyle">
        <item name="mapTextSize">32</item>
        <item name="mapTextColor">#DB5461</item>
        <item name="mapTextStrokeWidth">1</item>
        <item name="mapTextStrokeColor">#DB5461</item>
    </style>

    <style name="labelTextStyle_2" parent="LabelTextStyle">
        <item name="mapTextSize">30</item>
        <item name="mapTextColor">#624CAB</item>
        <item name="mapTextStrokeWidth">1</item>
        <item name="mapTextStrokeColor">@android:color/darker_gray</item>
    </style>
</resources>